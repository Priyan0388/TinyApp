<html>
<header>
  <h1> TinyApp</h1>
  <h2><%= email %></h2>
</header>

<body>
  <% if(email){%>
    <form method="POST" action="/logout">
    <button type="submit">LOGOUT</button>
  </form>
  <% } else { %>
      <form method="POST" action="/login">
        <input type="text" name="username" style="width: 300px; margin: 1em">
        <button type="submit">LOGIN</button>
      </form>
  <% } %>
</body>

</html>